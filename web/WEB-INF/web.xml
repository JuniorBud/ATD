<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>pages/login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Login Servlet</servlet-name>
        <servlet-class> server.servlets.LoginServlet </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login Servlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Registration Servlet</servlet-name>
        <servlet-class> server.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration Servlet</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Voorraadbeheer Servlet</servlet-name>
        <servlet-class>server.servlets.VoorraadBeheerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Voorraadbeheer Servlet</servlet-name>
        <url-pattern>Voorraadbeheer/VoorraadBeheer.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>KlantAanmaken</servlet-name>
        <servlet-class>server.servlets.KlantAanmakenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KlantAanmaken</servlet-name>
        <url-pattern>/KlantAanmakenServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NieuweAuto</servlet-name>
        <servlet-class>server.servlets.AutoRegistrerenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NieuweAuto</servlet-name>
        <url-pattern>/AutoRegistrerenServlet.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LaadAutos</servlet-name>
        <servlet-class>server.servlets.LaadAutosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LaadAutos</servlet-name>
        <url-pattern>/LaadAutosServlet.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>server.servlets.StartServlet</servlet-class>
    </servlet>
</web-app>





